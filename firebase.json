{
  "functions": [
    {
      "codebase": "default",
      "source": "functions"
    },
    {
      "source": "uploadfile",
      "codebase": "uploadfile",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9098
    },
    "functions": {
      "port": 5002
    },
    "firestore": {
      "port": 8182
    },
    "ui": {
      "enabled": true,
      "port": 4001
    }
  }
}
